@using Microsoft.AspNet.Identity;
@model List<WOT_CW_Assistant.Models.TankStatistics>
@{
    ViewBag.Title = "Tanks Statistics";
}
@if (Request.IsAuthenticated)
{
    <h2>Tanks Statistics</h2>

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("NickName", "OrderBy", "TankStatistic", new { orderBy = "nickName" }, null)
            </th>
            <th>
                @Html.ActionLink("Tank", "OrderBy", "TankStatistic", new { orderBy = "tank" }, null)
            </th>
            <th>
                @Html.ActionLink("Battles", "OrderBy", "TankStatistic", new { orderBy = "battlesCount" }, null) 
            </th>
            <th>
                @Html.ActionLink("Avg Exp", "OrderBy", "TankStatistic", new { orderBy = "avgExp" }, null)
            </th>
            <th>
                @Html.ActionLink("Avg Dmg", "OrderBy", "TankStatistic", new { orderBy = "avgDmg" }, null)
            </th>
            <th>
                @Html.ActionLink("Avg Spot", "OrderBy", "TankStatistic", new { orderBy = "avgSpot" }, null)
            </th>
            <th>
                @Html.ActionLink("Win Percent", "OrderBy", "TankStatistic", new { orderBy = "winPercent" }, null)
            </th>
        </tr>

        @foreach (var tankStatisctics in Model)
        {
            <tr>
                <td>
                    @Html.Encode(tankStatisctics.playerNickName)
                </td>
                <td>
                    @Html.Encode(tankStatisctics.tank)
                </td>

                <td>
                @Html.Encode(tankStatisctics.battlesCount)
                </td>
                <td>
                    @Html.Encode(tankStatisctics.avgExperiencePerBattle)
                </td>
                <td>
                    @Html.Encode(tankStatisctics.avgDamagePerBattle)
                </td>
                <td>
                    @Html.Encode(tankStatisctics.spotPerBattle)
                </td>
                <td>
                    @Html.Encode(tankStatisctics.winningPercent)
                </td>
            </tr>
        }

    </table>
}


