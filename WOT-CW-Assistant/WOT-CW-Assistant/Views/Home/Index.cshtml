@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Home Page";
}

@if (Request.IsAuthenticated)
{
    @Html.Action("Menu", "Navigation")
    <div class="content">

        <p>Welcome  @User.Identity.GetUserName() </p>

        @using (Html.BeginForm("Index", "Tanks", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {
            <h4>Select tier of Clan Wars/Stronghold Battle.</h4>
            <hr />
            <div class="form-group">

                <div class="col-md-10">
                    Tier 6
                    @Html.RadioButton("tier", "6")
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    Tier 8
                    @Html.RadioButton("tier", "8")
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    Tier 10
                    @Html.RadioButton("tier", "10")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Select Tier" />
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="jumbotron">
        <h1>World of Tanks Clan Wars Assistant</h1>
        <p class="lead">Welcome to World of Tanks Clan Wars Assistant.</p>
    </div>
}

